<section>
    <div>
        {{user.user}}
    </div>
    {{#if user.posts}}
    <ul>
        <h1>posts</h1>
        {{#each user.posts as |post|}}
        <li>
            <div>
                <a href='/post/{{id}}'>
                    {{> post-details}}
                </a>
                <button class='button' id='delete-button' data-id={{id}}>delete</button>
                <button class='button' id='edit-button' data-id={{id}}>edit</button>
            </div>
        </li>
        {{/each}}
    </ul>
    {{/if}}
    <button class='button' id='create-new'>New Post</button>
</section>

{{! modal to edit a post }}
<div class="modal" id="edit">
  <div class="modal-background" id='edit-background'></div>
  <div class="modal-content">
    <div class="card">
      <form id="edit-post">
        <div class="title is-1">Edit Post</div>
        <div class="field">
          {{! title field form }}
          <div>
            <input
              class="input"
              id="edit-title-field"
            />
          </div>
          {{! comment field form }}
          <div>
            <input
              class="textarea"
              id="edit-post-field"
            />
          </div>
          {{! submit button }}
          <div>
            <button class="button" type="submit">Submit Edit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

