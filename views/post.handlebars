<section>
    <h2 class='title is-3 mx-2'>Posts</h2>
    {{#each posts as |post|}}
    <a href='/post/{{id}}'>
        {{> post-details}}
    </a>
    {{/each}}
    <button class='button' id='create-new'>New Post</button>
</section>

{{!-- modal to add a comment --}}
<div class='modal'>
    <div class='modal-background'></div>
    <div class='modal-content'>
        <div class='card'>
            <form id='add-post'>
                <div class='title is-1'>New Post</div>
                <div class='field'>
                    {{!-- title field form --}}
                    <div>
                        <input class='input' placeholder='Enter title here...' id='title-field' />
                    </div>
                    {{!-- comment field form --}}
                    <div>
                        <input class='textarea' placeholder='Enter comment here...' id='post-field' />
                    </div>
                    {{!-- submit button --}}
                    <div>
                        <button class='button' type='submit'>Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script src='/js/modal.js'></script>
<script src='/js/newPost.js'></script>